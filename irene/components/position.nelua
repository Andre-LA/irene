local Vec2 = require 'nene.math.vec2'
local component = require 'rotor.component'

local Position <nickname 'Position'> = @component(@record{
  origin_pos: Vec2,
  local_pos: Vec2,
})

function Position:final_pos(): Vec2
  return self.origin_pos + self.local_pos
end

return Position
