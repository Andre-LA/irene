require 'nene'
require 'rotor.optional'
require 'irene.makers'

local Vec2 = @Math.Vec2
local Comps = @Irene.Comps

local CameraHolder = @record{
  position: Vec2,
  offset: Vec2
}
## Irene.impl_is_component(CameraHolder)

global Comps.CameraHolder = @CameraHolder

function CameraHolder:set_target(target: Vec2)
  self.position = target + self.offset
end
