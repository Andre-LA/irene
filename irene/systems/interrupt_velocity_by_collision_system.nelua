local Velocity = require 'irene.components.velocity'
local Collider = require 'irene.components.collider'

local InterruptVelocityByCollisionSystem = @record{}

function InterruptVelocityByCollisionSystem:run(c: record{ velocity: *Velocity, collider: *Collider })
  local vel_sign_x, vel_sign_y = math.sign(c.velocity.final_velocity.x), math.sign(c.velocity.final_velocity.y)

  if vel_sign_x * c.collider.velocity_interrupted.x < 0 then
    c.velocity.final_velocity.x = 0
    c.collider.velocity_interrupted.x = 0
  end

  if vel_sign_y * c.collider.velocity_interrupted.y > 0 then
    c.velocity.final_velocity.y = 0
    c.collider.velocity_interrupted.y = 0
  end
end

return InterruptVelocityByCollisionSystem
